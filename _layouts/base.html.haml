      <![endif]-->
    %link{:rel => "shortcut icon", :href => relative("/favicon.ico")}

  %body(data-spy="scroll" data-target=".bs-docs-sidebar")
    -# Google Tag Manager (which includes Google Analytics) script part 1/2, if javascript is disabled
    :plain
      <noscript><iframe src="//www.googletagmanager.com/ns.html?id=#{site.googleTagManagerId}" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

    %header.navbar.navbar-default.navbar-fixed-top(role="navigation")
      #tabzillaHolder
      .dropup
        %div#ajbossproject A JBoss Project
        %a#tab.tabnav-closed{:href => "#"} Red Hat
        %script
          window.addEventListener('load', function() { renderTabzilla("Drools","drools", true) });
      .container
        .navbar-header
          -# When the screen width is too little, these 3 icon-bar spans are needed to show the collapsed navbar
          %a.button.navbar-toggle(data-toggle="collapse" data-target="#baseNavigation")
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand(style="padding: 10px;"){:href => relative("/")}
            %img(alt="Drools logo"){:src => relative("/headerFooter/DroolsLogo200px.png")}
        .collapse.navbar-collapse#baseNavigation
          %ul.nav.navbar-nav
            %li<
              %a{:href => relative("/")} Home
            %li<
              %a{:href => relative("/download/download.html")} Download
            %li.dropdown
              %a.dropdown-toggle(data-toggle="dropdown" href="#")<
                = precede 'Learn ' do
                  %b.caret>
              %ul.dropdown-menu
                %li<
                  %a{:href => relative("/learn/documentation.html")} Documentation
                %li<
                  %a{:href => relative("/learn/video.html")} Videos
                %li<
                  %a{:href => relative("/learn/slides.html")} Slides
                %li.divider
                %li<
                  %a{:href => relative("/learn/testimonialsAndCaseStudies.html")} Testimonials and Case Studies
            %li<
              %a{:href => relative("/community/getHelp.html")} Get Help
            %li<
              %a{:href => relative("/code/sourceCode.html")} Source
            %li<
              %a{:href => relative("/product/services.html")} Services
            %li.dropdown
              %a.dropdown-toggle(data-toggle="dropdown" href="#")<
                = precede 'KIE ' do
                  %b.caret>
              %ul.dropdown-menu
                %li<
                  %a(href="https://www.drools.org" rel="publisher" title="Drools") Drools
                %li<
                  %a(href="https://www.jbpm.org" rel="publisher" target="_blank" title="jBPM") jBPM
                %li<
                  %a(href="https://www.optaplanner.org" rel="publisher" target="_blank" title="OptaPlanner") OptaPlanner
                %li.divider
                %li<
                  %a(href="https://www.kiegroup.org/" target="_blank" title="Knowledge is everything group") KIE group
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle(data-toggle="dropdown" href="#")<
                = precede 'Follow us ' do
                  %b.caret>
              %ul.dropdown-menu
                %li<
                  %a(href="https://plus.google.com/101003552532172845268/" rel="publisher" target="_blank" title="News stream via Google+")<
                    %img{:src => relative("/headerFooter/googlePlusLogo.png"), :alt => "G+"} &nbsp;Google+
                %li<
                  %a(href="https://twitter.com/DroolsRules" target="_blank" title="News stream via Twitter")<
                    %img{:src => relative("/headerFooter/twitterLogo.png"), :alt => "T"} &nbsp;Twitter
            %li.navbar-form(style="padding-top: 5px;")
              -# The plusone button fails with data-href="https://plus.google.com/101003552532172845268/"
              %div(class="g-plusone" data-href="https://plus.google.com/101003552532172845268/") &nbsp;



    .body-without-header-footer
      .forkMeOnGithub
        %a(href="https://github.com/kiegroup" target="_blank")
          %img{:src => relative("/headerFooter/forkMeOnGithub.png"), :alt => "Fork me on GitHub"}

      .container#Content(style="padding-top: 20px;")
        ~ content

    %footer
      .container
        .row
          .col-md-3
            %h4 KIE projects
            %ul
              %li<
                %a(href="https://www.drools.org/" target="_blank") Drools rule engine
              %li<
                %a(href="https://www.optaplanner.org/" target="_blank") OptaPlanner constraint solver
              %li<
                %a(href="https://www.jbpm.org/" target="_blank") jBPM workflow engine
          .col-md-3
            %h4 Community
            %ul
              %li<
                %a(href="http://blog.athico.com/" target="_blank") Blog
              %li<
                %a{:href => relative("/community/getHelp.html")} Get Help
              %li<
                %a{:href => relative("/community/team.html")} Team
              %li<
                %a{:href => relative("/community/governance.html")} Governance
              %li<
                %a{:href => relative("/community/research.html")} Academic research
          .col-md-3
            %h4 Code
            %ul
              %li<
                %a{:href => relative("/code/sourceCode.html")} Build from source
              %li<
                %a{:href => site.issueTracker} Submit a bug
              %li<
                %a{:href => relative("/code/license.html")} License (Apache)
              %li<
                %a{:href => site.pom.latest.droolsReleaseNotes} Release notes
              %li<
                %a{:href => relative("/download/upgradeRecipe/upgradeRecipe7.0.html")} Upgrade recipes
          .col-md-3
            .sponsorMessage
              %span Sponsored by
              %br
              %a(href="https://www.redhat.com/")<
                %img{:src => relative("/headerFooter/redHatLogo.png"), :alt => "Red Hat"}
            .sponsorMessage
              %span More coder content at
              %br
              %a(href="https://developers.redhat.com/")<
                %img{:src => relative("/headerFooter/redHatDevelopersLogo.png"), :alt => "Red Hat Developers"}

        .row
